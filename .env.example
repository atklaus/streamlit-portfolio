# Copy to .env and fill in values for local runs that use cloud storage.
# Streamlit can also load secrets from .streamlit/secrets.toml.

# DigitalOcean Spaces (S3-compatible) credentials
DO_SPACES_KEY=your_do_spaces_key
DO_SPACES_SECRET=your_do_spaces_secret
DO_SPACES_REGION=nyc3
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
DO_SPACES_BUCKET_ENDPOINT=https://your-bucket.nyc3.digitaloceanspaces.com

# Optional: set to your local hostname to filter analytics locally
LOCAL_DEV_HOSTNAME=your_hostname

# Telemetry logging
LOGGING_ENABLED=true
LOG_DIR=./data/logs
LOG_FLUSH_EVENTS=25
LOG_FLUSH_SECONDS=5
LOG_SESSION_FLUSH_SECONDS=60
APP_VERSION=dev

# Optional: s3cmd configuration if you use .s3cfg with env substitution
S3CFG_GPG_PASSPHRASE=your_passphrase
